.container{
  display: flex;
  flex-direction: column;
  width: 200rpx;
}

.post{
  width: 200rpx;
  height: 270rpx;
  margin-bottom: 22rpx;
}

.title{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.rate-container{
  margin-top: 6rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.score{
  font-size: 24rpx;
  margin-left: 22rpx;
}