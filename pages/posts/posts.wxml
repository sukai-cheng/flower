<view>
  <swiper circular="true" indicator-dots="true" autoplay="true">
    <!-- swiper-item插槽 -->
    <swiper-item>
      <image src="../../images/iqiyi.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/vr.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/wx.png"></image>
    </swiper-item>
  </swiper>
</view>

<block wx:for="{{postList}}" wx:key="postId">
  <!-- data-id是自定义属性 -->
  <view data-id="{{item.postId}}" bind:tap="onGotoDetail" class="post-container">

    <view class="post-author-date">
      <image class="post-author" src="{{item.avatar}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>

    <text class="post-title">{{item.title}}</text>

    <image class="post-image" src="{{item.imgSrc}}"></image>

    <text class="post-content">{{item.content}}</text>

    <view class="post-like">
      <l-icon name="favor" size="28" class="post-like-image" color="#666"></l-icon>
      <text class="post-like-font">{{item.collection}}</text>
      <l-icon name="eye" size="32" class="post-like-image" color="#666"></l-icon>
      <text class="post-like-font">{{item.reading}}</text>
    </view>

  </view>
</block>